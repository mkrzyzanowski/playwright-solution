{
  "name": "playwright-solution",
  "version": "1.0.0",
  "description": "Playwright solution",
  "scripts": {
    "postinstall": "npx playwright install",
    "test:e2e": "playwright test --project firefox --project chrome --project safari",
    "test:api": "playwright test --project api",
    "test:api:debug": "cross-env DEBUG=pw:api playwright test --project api",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@playwright/test": "^1.41.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@types/node": "^20.11.5",
    "cross-env": "^7.0.3"
  }
}
